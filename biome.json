{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".next"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"all": true,
				"noProcessEnv": "off",
				"useExplicitType": "off",
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"@mui/material": "Import a sub-path instead, e.g. @mui/material/Button",
							"@mui/icons-material": "Import a specific icon sub-path, e.g. @mui/icons-material/Add",
							"@mui/lab": "Import from @mui/lab/<component> to avoid tree-shaking issues"
						}
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
